mixin thumb(pugclass, pughref, image, name, date )
    a(class="article-thumb "+pugclass, href="./posts"+pughref)
        .thumb-image(style='background-image:url(' + require('../images/articles/' +`${image}` + '.jpg') + ')')

        .article-meta
            .name= name
            .date= date

articles
    .article-wrap
        .vueArticle.design.show
            +thumb('design',
                    '/lagos-stadium-competition.html',
                    'design_01',
                    'Lagos-Stadium-Competition2',
                    'Dec 17, 2018')

    .article-wrap
        .vueArticle.research
            +thumb('research',
                    '/Roguelike.html',
                    'game_01',
                    'Roguelike',
                    'July 17, 2024')

    .article-wrap
        .vueArticle.other
            +thumb('other',
                    '/to-be-continued.html',
                    'other_03',
                    'To-Be-Continued',
                    'Jan 06, 2020')
